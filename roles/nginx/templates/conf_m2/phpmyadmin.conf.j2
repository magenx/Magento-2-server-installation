## phpMyAdmin configuration
location ~ ^/mysql_{{ phpmyadmin_path }}/(.*)$ {
  alias /usr/share/phpMyAdmin/$1;

  include ipset/allow.conf;
  deny all;
		   
  location ~ ^/mysql_{{ phpmyadmin_path }}/(.+\.php)$ {
    alias /usr/share/phpMyAdmin/$1;
    fastcgi_pass unix:/var/run/php/php{{ php_version }}-fpm.sock;
    fastcgi_index index.php;
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    include  fastcgi_params;
   }
   location ~* ^/mysql_{{ phpmyadmin_path }}/(.+\.(jpg|jpeg|gif|css|png|js|ico|html|xml|txt))$ {
     alias /usr/share/phpMyAdmin/$1;
   }
   location ~* ^/mysql_{{ phpmyadmin_path }}/(libraries|setup/lib|setup/frames)/ {
     deny all;
   }
}
